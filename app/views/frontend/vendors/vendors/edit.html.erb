<% provide(:title, "#{@vendor.name} - Edit Company Profile") %>

<%= semantic_form_for @vendor.object, :as => :vendor, :url => vendor_path(@vendor.id), :method => "patch" do |f| %>
  <%= f.inputs "Company Profile" do %>
    <%= f.input :name %>
    <%= f.input :logo, :as => :file %>
    <%= f.input :description,
      :as => :text,
      :input_html => { :rows => 12, :max_length => 2000 },
      :placeholder => "A description about the vendor. Max 5000 characters." 
    %>
    <%= f.input :vendor_type, :as => :radio, :collection => Physical::Vendor::VendorType.all %>

  <% end %>

  <%= f.actions do %>
      <%= f.action :submit, :as => :button, :label => "Save Changes", :class => "success button" %>
      <%= f.action :cancel, :as => :link, :url => vendor_path(@vendor), :label => "Cancel and Go Back", :button_html => {:class => "neutral button"} %>
  <% end %>
<% end %>
