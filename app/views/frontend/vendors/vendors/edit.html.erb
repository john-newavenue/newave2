<% provide(:title, "Edit #{@vendor.object.name}") %>

<h3><%= yield(:title) %></h3>

<%= semantic_form_for @vendor.object, :as => :vendor, :url => vendor_path(@vendor.object.id), :method => "patch" do |f| %>
  <%= f.inputs "Basic Information" do %>
    <%= f.input :name %>
    <%= f.input :logo, :as => :file %>
    <p><%= image_tag @vendor.object.logo.url if @vendor.object.logo %></p>
    <%= f.input :description,
      :as => :text,
      :input_html => { :rows => 6, :max_length => 2000 },
      :placeholder => "A description about the vendor. Max 5000 characters." 
    %>
    <%= f.input :vendor_type, :as => :radio, :collection => Physical::Vendor::VendorType.all %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button, :class => "small success button" %>
    <%= link_to "Cancel", vendor_path(:slug => @vendor.object.slug) %>
  <% end %>
<% end %>
