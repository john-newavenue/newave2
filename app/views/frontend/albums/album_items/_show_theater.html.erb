<!-- item content -->
<div class="screen">
  <div class="screen-content-wrapper">
    <div class="screen-content-centerer loading-container">
    <%= image_tag @item.get_attachment2(:large), :class => "screen-featured-image" %>
    </div>
  </div>
</div>

<!-- nav -->
<% p = @item.get_image_position_info %>
<div class="previous nav-button <%= p[:previous_id] ? "" : "hidden" %>">
  <% if p[:previous_id] %>
    <%= link_to item2_path(:id => p[:previous_id], :slug => p[:previous_slug]), :remote => true, :class => "display-theater" do %><i class="previous-theater-button"></i><% end %>
  <% end %>
</div>
<div class="next nav-button <%= p[:next_id] ? "" : "hidden" %>">
  <% if p[:next_id] %>
    <%= link_to item2_path(:id => p[:next_id], :slug => p[:next_slug]), :remote => true, :class => "display-theater" do %><i class="next-theater-button"></i><% end %>
  <% end %>
</div>

<!-- screen footer -->
<div class="screen-footer">
  <div class="screen-footer-content-wrapper blank-loader pad center-text">
    <ul class="button-group" style="display: inline-block;">
      <% 
        share_url = "#{request.protocol}#{Rails.application.config.domain_settings[:host]}#{item2_path(:id => @item.id, :slug => @item.slug)}"
        share_title = @item.title
        share_image = @item.get_attachment2(:large_square)
        share_description = @item.description

        facebook_share_url = "http://www.facebook.com/sharer/sharer.php?s=100&p[url]=#{share_url}&p[images][0]=#{share_image}&p[title]=#{share_title}&p[summary]=#{share_description}"
        twitter_share_url = "http://twitter.com/home?status=#{share_url}"
      %>
      <li><%= render :partial => 'frontend/albums/album_items/save_to_my_project_button', :locals => { :album_item_id => @item.id, :btn_class => "" } %></li>
      <li><%= link_to_function raw('<i class="social foundicon-facebook"></i>'), "share_popup(600,600,'#{facebook_share_url}')", :class => "button secondary radius"  %></li>
      <li><%= link_to_function raw('<i class="social foundicon-twitter"></i>'), "share_popup(600,600, '#{twitter_share_url}')", :class => "button secondary radius twitter-share-button" do %><% end %></li>
      <li><%= link_to item2_path(:id => @item.id, :slug => @item.slug), :class => "button secondary radius" do %><i class="icon-link" style="display:inline-block;height:13px;"></i><% end %></li>
    </ul>
  </div>
</div>

<!-- sidebar -->
<div class="screen-sidebar">
  <div class="screen-sidebar-content-wrapper pad blank-loader">
    
    <% if !@item.title.blank? %><h6><%= @item.title %></h6><% end %>

    <h6><%= link_to @item.album.get_title, media_path(@item.album) %></h6>

    <p><% if not @item.description.blank? %><%= simple_format @item.description %><% end %></p>

    <h6>More:</h6>

    <div class="row">
      <!-- neighboring images-->
      <div class="large-12 columns">
        <ul class="large-block-grid-4 image-collection">
          <% @item.get_neighboring_images(8).each do |sibling| %>
          <li>
            <div class="tile <%= sibling.id == @item.id ? "active" : "" %>">
              <%= render :partial => 'frontend/albums/album_items/show_image', :locals => { :item => sibling, :size => :small_square, :standalone_link => false, :show_save_button => false, :force_size => true} %>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

</div>

<!-- sidebar footer -->
<div class="screen-sidebar-footer">
  <div class="screen-sidebar-footer-wrapper pad blank-loader"></div>
</div>