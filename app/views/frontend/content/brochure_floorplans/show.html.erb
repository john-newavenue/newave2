<% provide(:title, "Design Example: #{@brochure.title}") %>

<% content_for :main do %>

  <h1><%= @brochure.title %></h1>

  <%= (render :partial => 'frontend/content/brochure/gallery', :locals => { :album => @brochure.album }) if @brochure.album%>

  <div class="row">
    <div class="large-8 columns">
      
      <% if @brochure.teaser_line %>
      <h3 class="teaser-line"><%= @brochure.teaser_line %></h3>
      <% end %>

      <ul>
        <li>Area (Square Feet): <%= @brochure.area %></li>
        <li>Number of Bed: <%= @brochure.number_of_bed %></li>
        <li>Number of Bath: <%= @brochure.number_of_bath %></li>
        <li>Has loft?: <%= @brochure.has_loft == true ? 'Yes' : 'No' %></li>
        <li>Number of stories: <%= @brochure.number_of_stories ? @brochure.number_of_stories : 1 %></li>
      </ul>

      <%= simple_format @brochure.long_description %>

      <h3>Ideal for...</h3>

      <%= simple_format @brochure.short_description %>

    </div>
    <div class="large-4 columns">

      <% if false %>
      <% if @brochure.attachment %>
        <%= link_to "Download PDF", @brochure.attachment(:original), :class => "button light-blue small" %>
      <% end %>
      <hr>
      <% end %>

      <h3>Share this design!</h3>
      <ul>
        <li>Twitter Icon</li>
        <li>Facebook Icon</li>
        <li>Pinterest Icon</li>
      </ul>

    </div>
  </div>

<% end %>

<% content_for :sidebar do %>
  <%= render :partial => 'frontend/content/brochure/side_nav', :locals => { :category => @brochure.category, :link_fun => Proc.new { |slug| brochure_floorplan_with_slug_path(:slug => slug) } } %>
  <hr>
  <%= render :partial => 'frontend/inquiries/mad_lib_form' %>
<% end %>