<% provide(:title, "Edit Design Example: #{@brochure.title}") %>

<% content_for :main do %>

  <h1><%=yield(:title) %></h1>

  <%= semantic_form_for @brochure, :as => 'brochure', :url => brochure_floorplan_path(@brochure) do |f| %>
    <%= f.inputs do %>
      <%= render :partial => 'frontend/content/brochure/form_fields', :locals => { :f => f } %>
      <%= f.action :submit, :as => :button, :label => 'Save Changes', :class => "success button" %>
      <%= link_to "Cancel and go back", brochure_floorplan_with_slug_path(:slug => @brochure.slug) %>
    <% end %>
  <% end %>

<% end %>

<% content_for :sidebar do %>

<% end %>