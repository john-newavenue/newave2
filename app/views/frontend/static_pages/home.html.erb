<% provide(:title, 'Home') %>
<% provide(:yield_only, true) %>

<header id="home-splash-container">
  <section id="home-splash">
    <div class="row">
      <div class="large-6 columns">
        <%= image_tag 'http://lorempixel.com/500/400/city' %>
