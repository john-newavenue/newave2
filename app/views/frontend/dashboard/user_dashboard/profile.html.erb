<h1 class="hide-for-small"><%= @user.username %></h1>

<hr />

<!-- Project List -->

<% project_count = @user && @user.project_memberships.count | 0 %>

<% if @user == current_user %>
  <% if project_count == 0 %>
    <%= link_to new_project_path, :class => 'button' do %>
      <i class='general foundicon-plus'></i>Start Your Project
    <% end %>
  <% else %>
    you have <%= project_count %> projects
    <ul>
      <% @user.projects.each do |p| %>
        <li><%= link_to p.title, project_path(p) %></li>
      <% end %>
    </ul>
  <% end %>
  
<% else %>
  Welcome to the profile of <%= @user.username %><br />
  <% if project_count == 0 %>
    This user has no projects.
  <% else %>
    TOOD: List projects
  <% end %>
<% end %>

