<% provide(:title, "Invite") %>

<h3><%= yield(:title) %></h3>

<%= semantic_form_for @invitation, :as => "invitation", :url => crm_invitations_path do |f| %>
  <%= f.inputs "" do %>
    <%= f.input :email, :as => :email %>
    <%= f.input :project_role,
      :as => :radio,
      :label => "Type of Account",
      :collection => Physical::Project::ProjectRole.all
    %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button, :class => "small success button", :label => "Send Invitation" %>
  <% end %>
<% end %>