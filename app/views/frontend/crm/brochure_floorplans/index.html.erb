<% provide(:title, "Floor Plans") %>

<h3><%=yield(:title)%></h3>

<ul class="button-group" style="margin-bottom: 1em; ">
  <li><%=link_to "New Floor Plan", new_crm_brochure_floorplan_path, :class => "button secondary" %></li>
</ul>

<table>
  <tbody>
    <thead>
      <td>ID</td>
      <td>Position</td>
      <td>Title</td>
      <td>Actions</td>
    </thead>
    <tbody id="sortable">
      <% @collection.each do |b| %>
      <tr>
        <td><%=b.id%></td>
        <td><%=b.position%></td>
        <td><%=b.title%></td>
        <td>
          <%= link_to brochure_floorplan_with_slug_path(:slug => b.slug), :title => "View", :class => "button small" do %><i class="general foundicon-page"></i><% end %>
          <%= link_to edit_crm_brochure_floorplan_path(:id => b.id), :title => "Edit", :class => "button small" do %><i class="general foundicon-edit"></i><% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </tbody>
</table>
