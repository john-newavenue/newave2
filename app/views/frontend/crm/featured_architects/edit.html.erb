<% provide(:title, "Featured Architect: #{@profile.first_name} #{@profile.last_name} (#{@user.username})") %>

<h1 class='small'><%= yield(:title) %></h1>

<%= semantic_form_for @profile, :as => :profile, :url => crm_featured_architect_path(@profile) do |f| %>
  <%= f.inputs  do %>
    <p><b>First Name</b>: <%=@profile.first_name%></p>
    <p><b>Last Name</b>: <%=@profile.last_name%></p>
    <p><b>Username</b>: <%=@user.username%></p>
    <p><b>Bio</b>: <br /><%= simple_format @profile.bio%></p>
    <p><%= link_to "Edit User's Info", edit_crm_user_path(@user), :class => "button neutral", :target => "_blank" %></p>
    <hr>
    <%= f.input :is_featured_architect %>
    <hr>
    <%= f.input :featured_architect_position, :as => :number, :label => "Position", :hint => "Will be used for ordering in the featured architects page." %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button, :class => "small success button", :label => "Save Changes" %>
    <%= link_to "Cancel and Go Back", crm_featured_architects_path, :class => "small neutral button large" %>
  <% end %>
<% end %>