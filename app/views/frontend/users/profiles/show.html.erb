<% provide(:title, @user.username) %>


<% if can?(:read, @profile) and !@profile.full_name.blank? %>
  <p><%= @profile.full_name %></p>
  <hr>
<% end %>

<!-- Project List -->

<% project_count = @user.object && @user.project_count | 0 %>

<% if @user.object == current_user and current_user.has_role? :customer %>

  <% if project_count == 0 %>
    <%= link_to new_project_path, :class => 'button' do %>
      <i class='general foundicon-plus'></i>Start Your First Project
    <% end %>
  <% else %>
    
    <ul class="large-block-grid-2">
      <% @user.projects.each do |p| %>
        <li>
          <h3><%= link_to p.title, project_path(p) %></h3>
          <p><%= truncate(p.description, :length => 50) %></p>
        </li>
      <% end %>      
    </ul>

    <%= link_to new_project_path, :class => 'button small' do %>
      <i class='general foundicon-plus'></i>New Project
    <% end %>
    
  <% end %>
  
<% else %>

  <p>No Projects.</p>

<% end %>

<hr />

