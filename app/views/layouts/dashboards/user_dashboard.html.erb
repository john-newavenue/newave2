<% content_for :content do %>

<section>

  <div class="row">


    <div class="large-2 columns">

      <p>TODO: User's profile picture</p>
      <h3 class="show-for-small"><%= @user ? @user.username  : current_user.username%></h3>

      <ul class="side-nav">
        <% if !@user or @user == current_user %>
          <li><%= active_link_to 'Edit your profile', '#', :wrap_tag => :li %></li>
          <li><%= active_link_to 'Account settings', '#', :wrap_tag => :li %></li>
          <li><%= active_link_to 'Log out', '#', :wrap_tag => :li %></li>
        <% else %>
          <li><%= active_link_to 'Follow user', '#', :wrap_tag => :li %></li>
          <li><%= active_link_to 'Send message', '#', :wrap_tag => :li %></li>
        <% end %>
      </ul>

    </div>

    <div class="large-10 columns">
      <h3 class="hide-for-small"><%= @user.username %></h3>
      <hr />
      <%= yield %>
    </div>


  </div>

</section>

<% end %>

<%= render :template => 'layouts/application' %>