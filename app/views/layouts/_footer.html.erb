        <li><%= link_to "http://blog.newavenuehomes.com/", :target => "_blank" do %><i class="social foundicon-wordpress"></i><% end %></li>
      </ul>
    </div>
  
    <div class="large-12 columns">
      <p>&copy; 2013 New Avenue, Inc.</p>
    </div>
  
  </div>
</section>

