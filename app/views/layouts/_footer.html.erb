<section class="footer">
  <div class="row">
    <div class="large-8 small-12 columns">
  
      <ul class="button-group footer-links show-for-medium-up">
        <%= render :partial => "layouts/footer_links" %>
      </ul>
  
      <ul class="side-nav show-for-small">
        <%= render :partial => "layouts/footer_links" %>
      </ul>
  
    </div>
    <div class="large-4 small-12 columns">
      <ul class="button-group social-buttons">
        <li><%= link_to "https://www.facebook.com/NewAvenueHomes", :target => "_blank" do %><i class="social foundicon-facebook"></i><% end %></li>
        <li><%= link_to "https://twitter.com/#!/NewAvenueHomes", :target => "_blank" do %><i class="social foundicon-twitter"></i><% end %></li>
