<% content_for :content do %>

<section>

  <div class="row">

    <div class="large-10 push-2 columns">
      <%= yield %>
    </div>

    <div class="large-2 pull-10 columns">
      <img src="http://placehold.it/137x150" alt="TODO: Vendor cover photo">

      <% if @vendor and can? :update, @vendor %>
        <ul class="side-nav">
          <li><%= link_to 'Edit Page', edit_vendor_path(@vendor) %></li>
          <li><%= link_to 'Invite Staff', "#" %></li>
          <% if @vendor and can? :manage, @vendor %>
            <li><%= link_to 'Delete Vendor', "#" %></li>
          <% end %>
        </ul>
      <% end %>

      <ul class="side-nav">
        <li><%= active_link_to '1', '#', :wrap_tag => :li %></li>
        <li><%= active_link_to '2', '#', :wrap_tag => :li %></li>
        <li><%= active_link_to '3', '#', :wrap_tag => :li %></li>
        <li><%= active_link_to '4', '#', :wrap_tag => :li %></li>
        <li><%= active_link_to '5', '#', :wrap_tag => :li %></li>
      </ul>
    </div>

  </div>

</section>

<% end %>

<%= render :template => 'layouts/application' %>