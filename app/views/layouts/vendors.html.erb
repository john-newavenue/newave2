<% content_for :content do %>

<section>

  <div class="row">

    <div class="large-10 push-2 columns">
      
      <%= yield %>
    </div>

    <div class="large-2 pull-10 columns">
      <% if @vendor.object %>
        <%= link_to vendor_path(@vendor.object) do %>
          <%= image_tag @vendor.profile_logo_url,:title => @vendor.name, :alt => @vendor.name %>
        <% end %>
      <% end %>

      <% if @vendor.object and can? :update, @vendor.object %>
        <ul class="side-nav">
          <li><%= link_to 'Edit Page', edit_vendor_path(@vendor.object) %></li>
          <li><%= link_to 'Manage Staff', vendor_staff_index_path(@vendor.object) %></li>
          <li><%= link_to 'Add Album', "#", :'data-reveal-id' => 'new_album_modal' %></li>
          <% if @vendor and can? :manage, @vendor %>
            <li><%= link_to 'Delete Vendor', "#" %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

  </div>

</section>

<% end %>



<% provide :modals do %>
<%= render :partial => 'frontend/albums/albums/new_modal' %>
<% end %>


<%= render :template => 'layouts/application' %>